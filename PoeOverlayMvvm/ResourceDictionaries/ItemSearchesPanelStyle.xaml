<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mvvm="clr-namespace:PoeOverlayMvvm.Utility.MVVM"
                    xmlns:converters="clr-namespace:PoeOverlayMvvm.Utility.MVVM.Converters">

    <Style x:Key="ItemSearchesPanelStyle" TargetType="FrameworkElement" >
        <Setter Property="Width" Value="{x:Static mvvm:ElementsSize.PanelWidth}"/>
        <Setter Property="Height" Value="{x:Static mvvm:ElementsSize.WindowHeight}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style TargetType="ItemsControl" x:Key="ItemSearchesItemsControlStyle">
        <Setter Property="MaxHeight" Value="{x:Static mvvm:ElementsSize.PanelItemsControlMaxHeight}"/>
    </Style>

    <Style TargetType="ToggleButton" x:Key="ItemSearchesHistoryToggleButtonStyle">
        <Setter Property="BorderThickness" Value="{x:Static mvvm:ElementsSize.HistoryButtonThickness}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ItemSearchesHistoryTextBlock" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="Margin" Value="{x:Static mvvm:ElementsSize.HistoryButtonThickness}"/>
    </Style>
    
</ResourceDictionary>
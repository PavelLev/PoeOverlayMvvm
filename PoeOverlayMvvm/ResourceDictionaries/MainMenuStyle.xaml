<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:PoeOverlayMvvm.Utility.MVVM.Converters"
                    xmlns:mvvm="clr-namespace:PoeOverlayMvvm.Utility.MVVM">

    <Style TargetType="StackPanel" x:Key="MainMenuStyle">
        <Setter Property="Background" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Height" Value="{x:Static mvvm:ElementsSize.MainMenuHeight}"/>
    </Style>

</ResourceDictionary>
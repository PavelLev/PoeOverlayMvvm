<Application x:Class="PoeOverlayMvvm.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PoeOverlayMvvm"
             Startup="App_OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/MainWindowStyle.xaml"/>
                <ResourceDictionary Source="Style/MainMenuStyle.xaml"/>
                <ResourceDictionary Source="Style/SidePanelStyle.xaml"/>
                <ResourceDictionary Source="Style/ItemSearchesPanelStyle.xaml"/>
                <ResourceDictionary Source="Style/ItemSearchStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <local:ApplicationViewModel x:Key="ApplicationViewModel"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>


<Application x:Class="PoeOverlayMvvm.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PoeOverlayMvvm"
             xmlns:converters="clr-namespace:PoeOverlayMvvm.Utility.MVVM.Converters"
             Startup="App_OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <local:ApplicationViewModel x:Key="ApplicationViewModel"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionaries/ConvertersResourceDictionary.xaml"/>
                <ResourceDictionary Source="ResourceDictionaries/MainWindowStyle.xaml"/>
                <ResourceDictionary Source="ResourceDictionaries/MainMenuStyle.xaml"/>
                <ResourceDictionary Source="ResourceDictionaries/ItemSearchesPanelStyle.xaml"/>
                <ResourceDictionary Source="ResourceDictionaries/ItemSearchStyle.xaml"/>
                <ResourceDictionary Source="ResourceDictionaries/ItemsPanelStyle.xaml"/>
                <ResourceDictionary Source="ResourceDictionaries/ItemStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>


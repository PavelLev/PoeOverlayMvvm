<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:PoeOverlayMvvm.Utility.MVVM.Converters"
                    xmlns:userControls="clr-namespace:PoeOverlayMvvm.UserControls">

    <Style TargetType="FrameworkElement" x:Key="SidePanelStyle">
        <Setter Property="Width" Value="{Binding
                Path=Height,
                ElementName=Window, 
                Converter={converters:MultiplyConverter},
                ConverterParameter=0.27}"/>
        <Setter Property="Height" Value="{Binding
                Path=Height,
                ElementName=Window}"/>
    </Style>
    <Style TargetType="Panel" BasedOn="{StaticResource SidePanelStyle}" x:Key="ItemsPanelStyle">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>


</ResourceDictionary>